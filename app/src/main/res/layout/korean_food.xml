<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/korean_food1_1"
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:layout_marginTop="324dp"
        android:scaleType="centerCrop"
        android:src="@drawable/right_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/korean_food1_2"
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:scaleType="centerCrop"
        android:src="@drawable/right_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/korean_food1_1"></ImageView>

    <ImageView
        android:id="@+id/korean_food1_3"
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:scaleType="centerCrop"
        android:src="@drawable/right_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/korean_food1_2"></ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>