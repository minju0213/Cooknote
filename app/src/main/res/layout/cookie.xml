<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cookie1"
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:layout_marginTop="335dp"
        android:scaleType="centerCrop"
        android:src="@drawable/right_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cookie2"
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:scaleType="centerCrop"
        android:src="@drawable/right_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cookie1"></ImageView>

    <ImageView
        android:id="@+id/cookie3"
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:scaleType="centerCrop"
        android:src="@drawable/right_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cookie2"></ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>