<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/top_bar" ></ImageView>

        <ImageView
            android:id="@+id/rogo"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/rogo" ></ImageView>

    </FrameLayout>

    <ImageButton
        android:id="@+id/DateGO_bt"
        android:onClick="DateGO_bt"
        android:layout_width="291dp"
        android:layout_height="107dp"
        android:layout_marginTop="45dp"
        android:background="@android:color/transparent"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:src="@drawable/date_go"
        tools:ignore="OnClick" />

    <ImageButton
        android:id="@+id/Recipe_bt"
        android:layout_width="291dp"
        android:layout_height="107dp"
        android:layout_gravity="right"
        android:layout_marginTop="36dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/right" />

    <ImageButton
        android:id="@+id/Question_bt"
        android:layout_width="291dp"
        android:layout_height="107dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/question" />

    <ImageButton
        android:id="@+id/onButton"
        android:layout_width="291dp"
        android:layout_height="107dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:onClick="onButton"
        android:src="@drawable/certificate_go"
        android:layout_gravity="right"  />



</LinearLayout>



